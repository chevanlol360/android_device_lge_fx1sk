import init.fx1sk-common.rc

on init
    chmod 0701 /mnt/media_rw
    mkdir /mnt/media_rw/sdcard1 0700 media_rw media_rw
    mkdir /storage/sdcard1 0700 root root
    mkdir /factory 0775 system system

on fs
    mount_all ./recovery.fstab
    restorecon /sns/cal/sns.reg
    restorecon /sns/cal
    restorecon /sns

    mkdir ve 0755 radio radio
    wait /dev/block/platform/msm_sdcc.1/by-name/ve
    exec /system/bin/e2fsck -p /dev/block/platform/msm_sdcc.1/by-name/ve
    mount ext4 /dev/block/platform/msm_sdcc.1/by-name/ve /ve nosuid nodev barrier=1 noatime noauto_da_alloc errors=continue

on boot
    chown bluetooth bluetooth /sys/class/rfkill/rfkill0/type
    chown bluetooth bluetooth /sys/class/rfkill/rfkill0/state
    chmod 0660 /sys/class/rfkill/rfkill0/state
    chmod 0644 /proc/bluetooth/sleep/lpm
    chmod 0644 /proc/bluetooth/sleep/btwrite
    chown bluetooth bluetooth /proc/bluetooth/sleep/lpm
    chown bluetooth bluetooth /proc/bluetooth/sleep/btwrite
    restorecon /proc/bluetooth/sleep/lpm
    restorecon /proc/bluetooth/sleep/btwrite
    chown system wifi /sys/module/bcmdhd/parameters/firmware_path
    chmod 0640 /sys/module/bcmdhd/parameters/firmware_path

# lights perms
    chown system system /sys/class/leds/R/brightness
    chown system system /sys/class/leds/G/brightness
    chown system system /sys/class/leds/B/brightness
    chown system system /sys/class/leds/R/device/led_blink

on post-fs
#for Emotional LED (LP5521 home-key backlight)
	chown system system /sys/devices/i2c-5/5-0032/led_blink
	chown system system /sys/devices/i2c-5/5-0032/led_pattern
	chown system system /sys/devices/i2c-5/5-0032/led_current_index
#for Touch Device
	chown system lgkeyguard /sys/devices/virtual/input/lge_touch/keyguard
	chmod 664 /sys/devices/virtual/input/lge_touch/keyguard
	chown system system /sys/devices/virtual/input/lge_touch/incoming_call
	chmod 664 /sys/devices/virtual/input/lge_touch/incoming_call

on post-fs-data
# reset power-on blink pattern
    write /sys/class/leds/R/device/led_blink 0
    chown radio radio /ve
    chmod 755 /ve
    exec /system/bin/fetch-swv
    exec /system/etc/init.grand-common.modem_links.sh

    # Make sure the default firmware is loaded
    write /sys/module/bcmdhd/parameters/firmware_path "/system/etc/firmware/fw_bcmdhd.bin"

service wpa_supplicant /system/bin/logwrapper /system/bin/wpa_supplicant \
    -iwlan0 -Dnl80211 -c/data/misc/wifi/wpa_supplicant.conf \
    -I/system/etc/wifi/wpa_supplicant_overlay.conf \
    -e/data/misc/wifi/entropy.bin -g@android:wpa_wlan0 -O/data/misc/wifi/sockets
    #   we will start as root and wpa_supplicant will switch to user wifi
    #   after setting up the capabilities required for WEXT
    #   user wifi
    #   group wifi inet keystore
    class main
    socket wpa_wlan0 dgram 660 wifi wifi
    disabled
    oneshot

service p2p_supplicant /system/bin/logwrapper /system/bin/wpa_supplicant \
    -iwlan0 -Dnl80211 -c/data/misc/wifi/wpa_supplicant.conf \
    -I/system/etc/wifi/wpa_supplicant_overlay.conf \
    -O/data/misc/wifi/sockets -N \
    -ip2p0 -Dnl80211 -c/data/misc/wifi/p2p_supplicant.conf \
    -I/system/etc/wifi/p2p_supplicant_overlay.conf \
    -puse_p2p_group_interface=1 -e/data/misc/wifi/entropy.bin \
    -g@android:wpa_wlan0
    #   we will start as root and wpa_supplicant will switch to user wifi
    #   after setting up the capabilities required for WEXT
    #   user wifi
    #   group wifi inet keystore
    class main
    socket wpa_wlan0 dgram 660 wifi wifi
    disabled

service conn_init /system/bin/logwrapper /system/bin/hwaddrs
    class late_start
    user system
    group system wifi
    oneshot

service thermald /system/bin/thermald
   class main
   user root
   group root
   disabled

# Running hwaddrs under init is enforcing 0600, we need more
on property:init.svc.conn_init=stopped
    chmod 644 /data/misc/wifi/config
    chmod 644 /data/misc/bdaddr

service ppd /system/bin/mm-pp-daemon
    class late_start
    user system
    socket pps stream 0660 system system graphics
    group system graphics

service qosmgrd /system/bin/qosmgr /system/etc/qosmgr_rules.xml
   user system

service fuse_sdcard1 /system/bin/sdcard -u 1023 -g 1023 -d /mnt/media_rw/sdcard1 /storage/sdcard1
    class late_start
    disabled

on property:sys.factory=1
	exec /system/bin/dd if=/system/etc/factory_reset_magic of=/dev/block/platform/msm_sdcc.1/by-name/mdm bs=512 count=1
